---
interface Props {
  title?: string | undefined | null;
  description?: string | undefined | null;
  image?: string | undefined | null;
}

const { title = "No title", description = "No Description", image = "img/icons/ios/512.png" } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<meta charset="utf-8" />

<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="theme-color" content="white" />
<meta http-equiv="Content-Security-Policy" content="img-src 'self' https://*.supabase.co data:; default-src 'self' 'unsafe-inline' https://*.supabase.co https://*.vercel-scripts.com https://cdn.vercel-insights.com https://vitals.vercel-insights.com https://vitals.vercel-analytics.com" />

<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="alternate icon" type="image/x-icon" href="/favicon.ico" />
<link rel="canonical" href={canonicalURL} />
<link rel="manifest" href="/manifest.webmanifest" />

<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<meta property="og:title" content={title} />
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:locale" content="en" />
{image && <meta property="og:image" content={new URL(image, Astro.url)} />}
<meta property="og:description" content={description} />

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content={import.meta.env.PUBLIC_COMPANY} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />

<meta name="twitter:url" content={Astro.url} />
{image && <meta name="twitter:image" content={new URL(image, Astro.url)} />}
<meta name="twitter:image:alt" content={import.meta.env.PUBLIC_COMPANY} />

<link rel="sitemap" href="/sitemap-index.xml" />