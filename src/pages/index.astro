---
import SectionTitle from "../components/SectionTitle.astro";
import SectionPoint from "../components/SectionPoint.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import favIconSvg from '../assets/favicons/favicon.svg';

Astro.response.headers.set("Cache-Control", "max-age=0, s-maxage=1, stale-while-revalidate=59");
const lang = await import("../locale/json/en.json");
---

<BaseLayout title={lang?.pages.index.title} description={lang?.pages.index.description} image={favIconSvg.src}>
  <SectionTitle />
  <SectionPoint />
</BaseLayout>
