---
import SectionTitle from "../components/page/SectionTitle.astro";
import SectionPoint from "../components/page/SectionPoint.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import favIconSvg from "../assets/favicons/favicon.svg";

Astro.response.headers.set(
  "Cache-Control",
  "max-age=0, s-maxage=1, stale-while-revalidate=59",
);
const lang = await import("../locale/json/en.json");
---

<BaseLayout
  title={lang?.pages.index.title}
  description={lang?.pages.index.description}
  image={favIconSvg.src}
  cspContent="img-src 'self' https://*.supabase.co data:; default-src 'self' 'unsafe-inline' https://*.supabase.co https://*.vercel-scripts.com https://cdn.vercel-insights.com https://vitals.vercel-insights.com https://vitals.vercel-analytics.com"
>
  <SectionTitle />
  <SectionPoint />
</BaseLayout>
