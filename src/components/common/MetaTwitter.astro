---
interface Props {
  title?: string;
  description?: string;
  image?: string;
}
const { title, description, image } = Astro.props;
---

<meta name="twitter:card" content="summary_large_image" />
{
  import.meta.env.PUBLIC_COMPANY && (
    <meta name="twitter:site" content={import.meta.env.PUBLIC_COMPANY} />
  )
}
{title && <meta name="twitter:title" content={title} />}
{description && <meta name="twitter:description" content={description} />}
{Astro.url && <meta name="twitter:url" content={Astro.url} />}
{image && <meta name="twitter:image" content={new URL(image, Astro.url)} />}
{
  import.meta.env.PUBLIC_COMPANY && (
    <meta name="twitter:image:alt" content={import.meta.env.PUBLIC_COMPANY} />
  )
}
